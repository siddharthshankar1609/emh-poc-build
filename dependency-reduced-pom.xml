      <artifactId>debezium-core</artifactId>
      <version>1.0.1.Final</version>
      <type>test-jar</type>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>jackson-datatype-jsr310</artifactId>
          <groupId>com.fasterxml.jackson.datatype</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.18.12</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <kafka.connect-api.version>5.4.1-ce</kafka.connect-api.version>
    <maven-javadoc-plugin.version>3.0.1</maven-javadoc-plugin.version>
    <junit.jupiter.version>5.6.0</junit.jupiter.version>
    <slf4j.version>1.7.28</slf4j.version>
    <debezium.version>1.0.1.Final</debezium.version>
    <java.version>1.8</java.version>
    <maven-shade-plugin.version>3.1.1</maven-shade-plugin.version>
    <maven-compiler-plugin.version>3.8.0</maven-compiler-plugin.version>
    <aws-java-sdk.version>1.11.728</aws-java-sdk.version>
    <powermock.version>1.6.4</powermock.version>
    <kafka-connect-jdbc.version>5.4.0</kafka-connect-jdbc.version>
    <dockerfile-maven-version>1.4.13</dockerfile-maven-version>
    <image.path>${project.artifactId}:${project.version}</image.path>
    <jackson.version>2.9.6</jackson.version>
    <spring.version>2.2.2.RELEASE</spring.version>
  </properties>
</project>
